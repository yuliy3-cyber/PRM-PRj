<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background_1"
    tools:context=".Activity.Account.AccountActivity">

    <!-- Back -->
    <ImageButton
        android:id="@+id/Back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:padding="12dp"
        android:src="@drawable/back_icon"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Avatar tròn -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatarLayout"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="70dp"
                app:cardUseCompatPadding="false"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/profile_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Tên -->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Arya Wijaya"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Email -->
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Awekadesign@gmail.com"
                android:textColor="@color/grey_background_2"
                android:textSize="16sp" />

            <!-- Hàng chức năng dùng item-row tái sử dụng -->
            <LinearLayout
                android:id="@+id/EditProfile"
                style="@style/Account.ItemRow"
                android:layout_marginTop="32dp">

                <ImageView
                    style="@style/Account.ItemIcon"
                    android:src="@drawable/edit_profile" />

                <TextView
                    style="@style/Account.ItemText"
                    android:text="@string/edit_profile" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyWallet"
                style="@style/Account.ItemRow">

                <ImageView
                    style="@style/Account.ItemIcon"
                    android:src="@drawable/my_wallet" />

                <TextView
                    style="@style/Account.ItemText"
                    android:text="@string/my_wallet" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/changePassword"
                style="@style/Account.ItemRow">

                <ImageView
                    style="@style/Account.ItemIcon"
                    android:src="@drawable/help_centre" />

                <TextView
                    style="@style/Account.ItemText"
                    android:text="@string/change_password" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/SignOut"
                style="@style/Account.ItemRow">

                <ImageView
                    style="@style/Account.ItemIcon"
                    android:src="@drawable/sign_out" />

                <TextView
                    style="@style/Account.ItemText"
                    android:text="@string/sign_out" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
