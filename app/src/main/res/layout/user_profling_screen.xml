<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background_1"
    tools:context=".Activity.MainActivity">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_back" />

    <!-- Nội dung chính cuộn được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="32dp">

            <!-- Chọn thể loại -->
            <TextView
                android:id="@+id/txtSelectFavGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Favorite Genre"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat500"
                android:layout_marginTop="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp"
                android:rowOrderPreserved="false">

                <Button
                    android:id="@+id/btnHorror"
                    style="@style/GenreButton"
                    android:text="Horror" />

                <Button
                    android:id="@+id/btnAction"
                    style="@style/GenreButton"
                    android:text="Action" />

                <Button
                    android:id="@+id/btnDrama"
                    style="@style/GenreButton"
                    android:text="Drama" />

                <Button
                    android:id="@+id/btnWar"
                    style="@style/GenreButton"
                    android:text="War" />

                <Button
                    android:id="@+id/btnComedy"
                    style="@style/GenreButton"
                    android:text="Comedy" />

                <Button
                    android:id="@+id/btnCrime"
                    style="@style/GenreButton"
                    android:text="Crime" />
            </GridLayout>

            <!-- Chọn ngôn ngữ -->
            <TextView
                android:id="@+id/txtSelectFavLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Select Your Favorite Language"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat500" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp"
                android:rowOrderPreserved="false">

                <Button
                    android:id="@+id/btnBahasa"
                    style="@style/GenreButton"
                    android:text="Bahasa" />

                <Button
                    android:id="@+id/btnEnglish"
                    style="@style/GenreButton"
                    android:text="English" />

                <Button
                    android:id="@+id/btnJapanese"
                    style="@style/GenreButton"
                    android:text="Japanese" />

                <Button
                    android:id="@+id/btnKorean"
                    style="@style/GenreButton"
                    android:text="Korean" />
            </GridLayout>

            <!-- Nút Next -->
            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundstyle50"
                android:backgroundTint="@color/button_background_color"
                android:rotationY="180"
                android:src="@drawable/ic_back" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
